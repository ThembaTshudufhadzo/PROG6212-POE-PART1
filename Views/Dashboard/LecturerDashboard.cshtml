@{
    ViewData["Title"] = "Lecturer Dashboard";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="text-start">
            <h1 class="display-4 text-primary fw-bold mb-1">Welcome, Lecturer! 👋</h1>
            <p class="lead text-secondary mb-0">Manage and track your monthly claims with ease.</p>
        </div>
        <div class="text-end">
            <a href="/Claims/Create" class="btn btn-primary btn-lg shadow-sm">
                <i class="fas fa-plus-circle"></i> New Claim
            </a>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Pending Claims</h5>
                    <p class="card-text display-2 fw-bolder">3</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Approved Claims</h5>
                    <p class="card-text display-2 fw-bolder">12</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 bg-info text-dark">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Total Claims Submitted</h5>
                    <p class="card-text display-2 fw-bolder">15</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <h2 class="h3 text-secondary mb-3">Your Recent Claims</h2>
            <div class="card shadow-sm border-0">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th scope="col" class="text-muted">Claim ID</th>
                                    <th scope="col" class="text-muted">Claim Period</th>
                                    <th scope="col" class="text-muted">Status</th>
                                    <th scope="col" class="text-muted">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="text-muted">#CMCS-101</td>
                                    <td class="text-muted">July 2025</td>
                                    <td><span class="badge bg-warning text-dark">Pending</span></td>
                                    <td>
                                        <button class="btn btn-primary btn-sm">View Details</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-muted">#CMCS-102</td>
                                    <td class="text-muted">June 2025</td>
                                    <td><span class="badge bg-success">Approved</span></td>
                                    <td>
                                        <button class="btn btn-primary btn-sm">View Details</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-muted">#CMCS-103</td>
                                    <td class="text-muted">May 2025</td>
                                    <td><span class="badge bg-success">Approved</span></td>
                                    <td>
                                        <button class="btn btn-primary btn-sm">View Details</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>